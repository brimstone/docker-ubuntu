#!/bin/bash

set -euo pipefail

options="-y"
list=""

if [ "$1" == "-f" ]; then
	shift
	options="-f -y"
elif [ "$1" == "--list" ]; then
	dpkg -l | awk '/^ii/ {print $2}' > "$2"
	shift 2
elif [ "$1" == "-n" ]; then
	shift
	options="-n"
elif [ "$1" == "--purge" ]; then
	apt-get remove --purge -y $(diff <(< "$2") <(dpkg -l \
								| awk '/^ii/ {print $2}') \
	| awk '/^>/ {print $2}') 
	rm "$2"
	exit
fi

apt-get update

apt-get $options install "$@"

apt-get clean
rm -rf /var/lib/apt/lists || true
